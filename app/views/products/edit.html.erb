<div class="col-md-12 products">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for @product do |f| %>
			<fieldset>
				<legend>Product</legend>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control"%>
				</div>
				<div class="form-group">
					<%= f.label :price %>
					<%= f.text_field :price, class: "form-control" %>
				</div>
				<div>
					<fieldset>
						<legend>Components</legend>
						<%= f.fields_for :components do |builder| %>
							<%= render "component_fields", f: builder %>
						<% end %>
						<ul>
							<%= link_to_add_fields "Add Component", f, :components %>
						</ul>
						
					</fieldset>
				</div>
				<%= f.submit "Edit Product", class: "btn btn-primary" %>
				<%= link_to "Cancel", products_path, class: "btn btn-default" %>
			</fieldset>
		<% end %>
	</div>
</div>