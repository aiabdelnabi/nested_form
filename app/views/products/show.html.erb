<div class="col-md-12">
	<h3>Name: <%= @product.name %></h1>
	<h3>Price: <%= @product.price%></h3>
	<h4>Total Price: <%= @product.total_price %></h4>

	<ul>
		<% @product.components.each do |component| %>
			<li><%= component.name %>, <%= component.price %></li>
		<% end %>
	</ul>
	<hr/>
	<%= link_to "Back to products", products_path, class: "btn btn-default" %>
</div>